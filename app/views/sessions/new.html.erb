  <%= form_with url: sign_in_path do |form| %>

<div class="container">
    <div class="login-form">
        <div style="display:flex; justify-content:center; align-items:center">
            <h1>Login</h1>
        </div>
        <div class="username">
            <div>
                <%= form.label :email%>
                <%= form.text_field :email, {class: "register-input", required: true}%>
            </div>
        </div>
        <div class="password">
            <div>
                <%= form.label :password%>
                <%= form.password_field :password, {class: "register-input password", required: true}%>
            </div>
        </div>
        <div>
            <a href="/register">Register</a>
        </div>
        <div class="button-form">
            <div class="registerbtn">
                <%= form.submit "Login"%>
            </div>
        </div>
    </div>
</div>
<% end %>
