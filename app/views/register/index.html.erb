
<div class="container">
    <div >
        <h1>Sign up<h1>
    </div>
    <div class="register-label">
        <%= form_with model: @user, url: users_path do |form| %>
            <div>
                <%=  form.label :name %>
                <%= form.text_field :name, {class: "register-input", required: true}%>
            </div>
            <div>
                <%= form.label :email%>
                <%= form.text_field :email, {class: "register-input", required: true}%>
            </div>
            <div>
                <%= form.label :password%>
                <%= form.password_field :password, {class: "register-input", required: true}%>
            </div>
            <div>
                <%= form.label :"Password Confirmation"%>
                <%= form.password_field :password_confirmation, {class: "register-input", required: true} %>
            </div>
            <div class="registerbtn">
                <%= form.submit "Sign up"%>
            </div>
        <% end %>
    </div>
</div>
    